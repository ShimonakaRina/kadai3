<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', user: @book1.user, book: @book %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tr>
            <td>
              <%= link_to user_path(@book1.user_id) do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
              <% end %>
              <br><%= link_to @user.name, user_path(@book1.user.id) %>
            </td>
            <td>
              <%= link_to @book1.title, book_path(@book1.id) %>
            </td>
            <td><%= @book1.body %></td>
            <td>
              <% if @book1.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book1.id), class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book1.user == current_user %>
              <%= link_to "Destroy", book_path(@book1.id), method: :delete, class:"btn btn-sm btn-danger" %>
              <% end %>
            </td>
             <th>
            <% if @book1.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book1), method: :delete do %>
               ♥<%= @book1.favorites.count %>
               <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book1), method: :post do %>
              ♡<%= @book1.favorites.count %>
              <% end %>
            <% end %>
            </th>
          <td>コメント数: <%= @book1.book_comments.count %></td>

          </tr>
        </table>
        <table>
          <% @book1.book_comments.each do |book_comment| %>
          <% book_comment_user = book_comment.user %>
          <tr>
    	      <td>
    		      <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
      		      <%= attachment_image_tag book_comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
      		      <%= book_comment_user.name %>
    		      <% end %>
    	      </td>
    	      <td><%= book_comment.comment %></td>
    	      <% if current_user == book_comment_user %>
      	      <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
    	      <% end %>
           </tr>
           <% end %>
          </table>
        <% if @book_comment.errors.any? %>
        <%= @book_comment.errors.count %>errors
        <% @book_comment.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
          <%= form_with model:[@book1,@book_comment], local: true do |f| %>
            <%= f.text_area :comment, size:"90x5" %><br>
            <%= f.submit '送信'%>
          <% end %>
        </div>
      </div>
    </div>