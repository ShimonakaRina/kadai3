<%= render 'books/user_info', user: @user, books: @books, book: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <th>
          <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
        </th>
        <th>
          <%= user.name %>
        </th>
        <th>
          <%= link_to "Show", user_path(user.id) %>
        </th>
        <% end %>
      </tbody>
    </table>
  </div>
</div>